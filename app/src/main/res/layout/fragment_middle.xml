<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="br.com.fellipe.horadorango.fragments.OrdersFragment">

    <TextView
        android:id="@+id/placeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Estabelecimento"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivOrderImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_pizza"/>

        <TextView
            android:id="@+id/orderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pedido:\n1 Pizza\n 1 Coca"
            android:textSize="15sp"
            android:layout_marginLeft="80sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:hint="Total: R$50,00"/>

        <TextView
            android:id="@+id/paymentForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="VISA"
            android:layout_marginLeft="40sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="EndereÃ§o de Entrega: Avenida Paulista, 100"/>

</LinearLayout>
